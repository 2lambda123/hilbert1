#!/usr/bin/env ruby

require 'qlang'

# Q command line
require 'qlang/exec'

# Q interpreter
require 'qlang/iq'

# TODO: There are vanch of todo ..
case ARGV.first
when '-i'
  loop do
    print 'Q:-> '
    begin
      input = $stdin.gets
      output = Iq.execute(input)
      $stdout.puts output
    rescue => e
      puts e
    end
  end
when '-v'
  puts Qlang::VERSION
when '-R', '-Ruby'
  exec = Qlang::Exec::Compiler.new(ARGV)
  exec.output!
end
